<package type="plugin">
  <name>yweather</name>
  <technology>online_service</technology>
  <description>Get weather informations from Yahoo! Weather</description>
  <detail>Get current weather informations about your town and give predictions about tomorrow</detail>
  <version>0.1.0</version>
  <documentation>http://wiki.domogik.org/tiki-index.php?page=plugin_yweather</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>en-current</name>
      <type>boolean</type>
      <description>Enable current weather data</description>
      <default-value>True</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>en-prev</name>
      <type>boolean</type>
      <description>Enable previsionnal weather data</description>
      <default-value>True</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>unit</name>
      <type>string</type>
      <description>'c' : Celcius ; 'f' : Farenheit</description>
      <default-value>c</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>city-1</name>
      <type>string</type>
      <description>City code. See http://weather.yahoo.com to find code</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>5</order-id>
      <name>device-1</name>
      <type>string</type>
      <description>Device address for this city (ex : weather_home)</description>
      <default-value>weather_home</default-value>
    </key>
    <key>
      <order-id>6</order-id>
      <name>city-2</name>
      <type>string</type>
      <description>Second city code. See http://weather.yahoo.com to find code</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>7</order-id>
      <name>device-2</name>
      <type>string</type>
      <description>Device address for this city (ex : weather_home)</description>
      <default-value></default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/yweather.xml"/>
    <file path="src/domogik/xpl/bin/yweather.py"/>
    <file path="src/domogik/xpl/lib/yweather.py"/>
  </files>
  <depandancies>
    <dep name="pySerial > 2.4"/>
  </depandancies>
</package>
