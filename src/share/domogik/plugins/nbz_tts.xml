<package type="plugin">
  <name>nbz_tts</name>
  <technology>communication</technology>
  <description>Send message to Nabaztag</description>
  <detail>Nabaztag text_to_speech management is an external service provide by Wizz.cc and an OpenJabNab Server</detail>
  <version>0.1</version>
  <documentation>http://wiki.domogik.org</documentation>
  <author>Kriss</author>
  <author-email>Kriss</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>1</order-id>
      <name>name</name>
      <type>string</type>
      <description>Name of your Nabaztag.</description>
      <default-value>Nabaztag</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>2</order-id>
      <name>serial</name>
      <type>string</type>
      <description>Serial of your Nabaztag to control it with Wizz.cc's API.</description>
      <default-value>0000000000</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>3</order-id>
      <name>token</name>
      <type>string</type>
      <description>Token of your Nabaztag to control it with Wizz.cc's API.</description>
      <default-value>0000000000</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>4</order-id>
      <name>voice</name>
      <type>string</type>
      <description>Nabaztag voice. Can be voice=xx or ws_kajedo=xxxx or ws_acapela=xxxx</description>
      <default-value>voice=fr</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/nbz_tts.xml"/>
    <file path="src/domogik/xpl/bin/nbz_tts.py"/>
    <file path="src/domogik/xpl/lib/nbz_tts.py"/>
  </files>
  <dependencies/>
  <device_technology>
      <id>communication</id>
      <name>Communication</name>
      <description>Messaging</description>
  </device_technology>
  <device_types/>
  <device_feature_models/>
</package>

