<?xml version="1.0" encoding="UTF-8"?>  
<statistic technology="generic">
    <schema name="sensor.basic">
        <xpltype type="*">
            <listener>
                <filter>
                    <key name="type" value="water"/>
                </filter>
            </listener>
            <mapping>
                <device field="device"/>
                <value field="current" new_name="water" 
                       filter_key="type" filter_value="water" />
            </mapping>
        </xpltype>
    </schema>
</statistic>

