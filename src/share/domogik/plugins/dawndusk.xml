<package type="plugin">
  <id>dawndusk</id>
  <technology>dawndusk</technology>
  <description>
  Get the dawn and dusk events using the geocoordinates.
  Can also send commands to devices using this event.
  </description>
  <changelog>
0.2
- Update the plugin to domogik 0.2.0
0.1
- plugin creation
  </changelog>
  <version>0.2a0</version>
  <documentation>http://wiki.domogik.org/plugin_dawndusk</documentation>
  <author>Sebastien GALLET, Maxence Dunnewind</author>
  <author-email>sgallet at gmail dot com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>longitude</name>
      <type>string</type>
      <description>The longitude of the house</description>
      <default-value>5.043</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>latitude</name>
      <type>string</type>
      <description>The latitude of the house</description>
      <default-value>47.352</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>cron</name>
      <type>boolean</type>
      <description>Use external cron like the cron plugin to schedule events</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>test</name>
      <type>boolean</type>
      <description>For test. Will send a dawn (a dusk) message 1min (6mins) after plugin starts</description>
      <default-value>False</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>5</order-id>
      <name>xpltype</name>
      <type>string</type>
      <description>Xpltype to use in the message</description>
      <default-value>xpl-cmnd</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>6</order-id>
      <name>schema</name>
      <type>string</type>
      <description>Schema to use to send command</description>
      <default-value>telldus.basic</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>7</order-id>
      <name>addname</name>
      <type>string</type>
      <description>Address field name (device)</description>
      <default-value>device</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>8</order-id>
      <name>add</name>
      <type>string</type>
      <description>Device address</description>
      <default-value>TS3</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>9</order-id>
      <name>command</name>
      <type>string</type>
      <description>Command to send to the device</description>
      <default-value>command</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>10</order-id>
      <name>dawn</name>
      <type>string</type>
      <description>Value of command when dawn event</description>
      <default-value>on</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>11</order-id>
      <name>dusk</name>
      <type>string</type>
      <description>Value of command when dusk event</description>
      <default-value>off</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/dawndusk/icon.png"/>
    <file path="src/share/domogik/plugins/dawndusk.xml"/>
    <file path="src/share/domogik/stats/dawndusk/dawndusk.basic.xml"/>
    <file path="src/share/domogik/url2xpl/dawndusk/daynight.xml"/>
    <file path="src/domogik/xpl/bin/dawndusk.py"/>
    <file path="src/domogik/xpl/lib/dawndusk.py"/>
  </files>
  <dependencies>
    <dep type="python" id="apscheduler (>=2.0.2)"/>
    <dep type="python" id="pyephem (>=3.7.5)"/>
    <dep type="plugin" id="xpl_time"/>
  </dependencies>
  <udev-rules/>
  <device_technology>
      <id>dawndusk</id>
      <name>Dawndusk</name>
      <description>Get the dawn and dusk time using the geocoordinates</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>dawndusk.status</id>
          <device_technology_id>dawndusk</device_technology_id>
          <name>Status</name>
          <description>View the day/night status using dawn/dusk triggers</description>
      </device_type>
  </device_types>
  <device_feature_models>
     <device_feature_model>
          <id>dawndusk.status.status</id>
          <name>Status</name>
          <feature_type>sensor</feature_type>
          <device_type_id>dawndusk.status</device_type_id>
          <parameters>
              {&quot;status&quot;:&quot;&quot;,&quot;value0&quot;:&quot;dusk&quot;, &quot;value1&quot;:&quot;dawn&quot;}
          </parameters>
          <value_type>string</value_type>
          <stat_key>status</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>

</package>
