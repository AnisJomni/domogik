<?xml version="1.0" encoding="UTF-8"?>  
<package type="plugin">
  <id>velbus</id>
  <technology>velbus</technology>
  <description>velbus interface</description>
  <changelog>
0.1.0
- relays only
- serial comunication only 
0.2.0
- added socket comunication
0.3.0
- added dimmer support
  </changelog>
  <version>0.3.0</version>
  <documentation>url</documentation>
  <author>Maikel Punie</author>
  <author-email>maikel.puni@gmail.com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>use-socket</name>
      <type>boolean</type>
      <description>use a TCP socket instead of a serial port</description>
      <default-value>0</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>device</name>
      <type>string</type>
      <description>velbus device (/dev/ttyACM0 for serial, or ip:port for socket</description>
      <default-value>/dev/ttyACM0</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/velbus/icon.png"/>
    <file path="src/share/domogik/stats/velbus/lighting.device-velbus.xml"/>
    <file path="src/share/domogik/url2xpl/velbus/setlevel.xml"/>
    <file path="src/domogik/xpl/bin/velbus.py"/>
    <file path="src/domogik/xpl/lib/velbus.py"/>
  </files>
  <dependencies/>
  <udev-rules/>
  <device_technology>
      <id>velbus</id>
      <name>Velbus</name>
      <description>Velbus http://www.velbus.eu</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>velbus.relay</id>
          <name>Switch</name>
          <description>Switch one channel on a device</description>
          <device_technology_id>velbus</device_technology_id>
      </device_type>
      <device_type>
          <id>velbus.dimmer</id>
          <name>Dimmer</name>
          <description>Dim one channel on a device</description>
          <device_technology_id>velbus</device_technology_id>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>velbus.relay.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>velbus.relay</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;, &quot;value0&quot;:&quot;0&quot;, &quot;value1&quot;:&quot;255&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>level</stat_key>
          <return_confirmation>0</return_confirmation>
       </device_feature_model>
       <device_feature_model>
          <id>velbus.dimmer.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>velbus.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;, &quot;value0&quot;:&quot;0&quot;, &quot;value1&quot;:&quot;255&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>level</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>velbus.dimmer.change</id>
          <name>Dimmer</name>
          <feature_type>actuator</feature_type>
          <device_type_id>velbus.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;setlevel&quot;,&quot;valueMin&quot;:0, &quot;valueMax&quot;:255}
          </parameters>
          <value_type>range</value_type>
          <stat_key>level</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
