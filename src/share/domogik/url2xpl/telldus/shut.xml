<technology id="telldus">
  <command name="shut">
    <schema>telldus.basic</schema>
    <command-key>command</command-key>
    <address-key>device</address-key>
    <command-xpl-value>shut</command-xpl-value>
    <parameters>
      <parameter key="level" location="1"/>
    </parameters>
  </command>
  <listener>
    <schema>telldus.basic</schema>
    <xpltype>xpl-trig</xpltype>
    <filter>
      <key name="command" value="shut" />
      <key name="device" value="@address@"/>
    </filter>
  </listener>
</technology>
