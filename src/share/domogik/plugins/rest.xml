<package type="plugin">
  <id>rest</id>
  <technology>domogik</technology>
  <description>Domogik REST server</description>
  <changelog>
0.2.0
- See tracker

0.1.0
- plugin creation
  </changelog>
  <version>0.2.0</version>
  <documentation>http://wiki.domogik.org/REST</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>q-timeout</name>
      <type>number</type>
      <description>Maximum wait time for getting data froma queue</description>
      <default-value>15</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>q-size</name>
      <type>number</type>
      <description>Size for 'classic' queues. You should not have to change this value</description>
      <default-value>10</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>q-pkg-size</name>
      <type>number</type>
      <description>Size for packages management queues. You should not have to change this value</description>
      <default-value>10</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>q-cmd-size</name>
      <type>number</type>
      <description>Size for /command queue</description>
      <default-value>1000</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>q-life-exp</name>
      <type>number</type>
      <description>Life expectancy for a xpl message in queues. You sould not have to change this value</description>
      <default-value>3</default-value>
    </key>
    <key>
      <order-id>5</order-id>
      <name>q-sleep</name>
      <type>number</type>
      <description>Time between each unsuccessfull look for a xpl data in a queue</description>
      <default-value>0.1</default-value>
    </key>
    <key>
      <order-id>6</order-id>
      <name>evt-timeout</name>
      <type>number</type>
      <description>Maximum wait time for a GET request (after event will be closed)</description>
      <default-value>300</default-value>
    </key>
    <key>
      <order-id>7</order-id>
      <name>q-evt-timeout</name>
      <type>number</type>
      <description>Maximum wait time for getting event from queue</description>
      <default-value>120</default-value>
    </key>
    <key>
      <order-id>8</order-id>
      <name>q-evt-size</name>
      <type>number</type>
      <description>Size for /event queue</description>
      <default-value>50</default-value>
    </key>
    <key>
      <order-id>9</order-id>
      <name>q-evt-life-exp</name>
      <type>number</type>
      <description>Life expectancy for an event in event queues</description>
      <default-value>5</default-value>
    </key>
  </configuration-keys>
  <files/>
  <dependencies/>
  <device_technology>
      <id>domogik</id>
      <name>Domogik</name>
      <description>Domogik</description>
  </device_technology>
  <device_types/>
  <device_feature_models/>
</package>
