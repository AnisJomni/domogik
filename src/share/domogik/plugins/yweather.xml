<package type="plugin">
  <id>yweather</id>
  <technology>online_service</technology>
  <description>Get weather informations from Yahoo! Weather  about your town</description>
  <changelog>
0.1
- plugin creation
  </changelog>
  <version>0.1a0</version>
  <documentation>http://wiki.domogik.org/plugin_yweather</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>en-current</name>
      <type>boolean</type>
      <description>Enable current weather data</description>
      <default-value>True</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>en-prev</name>
      <type>boolean</type>
      <description>Enable previsionnal weather data</description>
      <default-value>True</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>unit</name>
      <type>string</type>
      <description>'c' : Celcius ; 'f' : Farenheit</description>
      <default-value>c</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>4</order-id>
      <name>city</name>
      <type>string</type>
      <description>City code. See http://weather.yahoo.com to find code</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>5</order-id>
      <name>device</name>
      <type>string</type>
      <description>Device address for this city (ex : weather_home)</description>
      <default-value></default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/yweather/icon.png"/>
    <file path="src/share/domogik/plugins/yweather.xml"/>
    <file path="src/domogik/xpl/bin/yweather.py"/>
    <file path="src/domogik/xpl/lib/yweather.py"/>
    <file path="src/share/domogik/stats/online_service/sensor.basic-yweather.xml"/>
  </files>
  <dependencies>
     <dep type="python" id="sympy (>= 0.7.0)"/>
  </dependencies>
