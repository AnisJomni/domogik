<package type="plugin">
  <name>bts_gen</name>
  <technology>bts</technology>
  <description>bts_gen</description>
  <detail>bts_gen</detail>
  <version>0.1.0</version>
  <documentation>http://wiki.domogik.org/#</documentation>
  <author>BTS, Fritz</author>
  <author-email>unkwown, fritz.smh at gmail.com</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>input</name>
      <type>string</type>
      <description>Input address</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>threshold</name>
      <type>string</type>
      <description>Threshold value (for onewire temperature input)</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>3</order-id>
      <name>output</name>
      <type>string</type>
      <description>Output address</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>4</order-id>
      <name>level</name>
      <type>boolean</type>
      <description>Output level when input is at logical level 1 or value > threshold (checked = 1, no checked = 0)</description>
      <default-value>True</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/bts_gen.xml"/>
  </files>
  <dependencies/>
  <device_technology>
      <id>bts</id>
      <name>BTS Project</name>
      <description>BTS Project</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>bts.scenario</id>
          <device_technology_id>bts</device_technology_id>
          <name>Scenario</name>
          <description>Scenario</description>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>bts.scenario.trigger</id>
          <name>Scenario</name>
          <feature_type>actuator</feature_type>
          <device_type_id>bts.scenario</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>trigger</value_type>
          <stat_key>scenario</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
