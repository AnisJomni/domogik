<?xml version="1.0" encoding="UTF-8"?>  
<statistic technology="arduino">
    <schema name="sensor.basic">
        <xpltype type="*">
            <listener>
                <filter>
                    <key name="type" value="level"/>
                    <key name="type" value="distance"/>
                </filter>
            </listener>
            <mapping>
                <device field="device"/>
                <value field="current" new_name="level" 
                       filter_key="type" filter_value="level" />
                <value field="current" new_name="distance" 
                       filter_key="type" filter_value="distance" />
            </mapping>
        </xpltype>
    </schema>
</statistic>

