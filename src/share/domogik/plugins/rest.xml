<plugin>
  <name>rest</name>
  <technology>domogik</technology>
  <description>REST server</description>
  <version>0.1</version>
  <documentation>http://wiki.domogik.org/tiki-index.php?page=plugins/REST</documentation>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>q-timeout</name>
      <type>number</type>
      <description>Maximum wait time for getting data froma queue</description>
      <default-value>QUEUE_TIMEOUT</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>q-size</name>
      <type>number</type>
      <description>Size for 'classic' queues. You should not have to change this value</description>
      <default-value>QUEUE</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>q-cmd-size</name>
      <type>number</type>
      <description>Size for /command queue</description>
      <default-value>QUEUE_COMMAND_SIZE</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>q-life-exp</name>
      <type>number</type>
      <description>Life expectancy for a xpl message in queues. You sould not have to change this value</description>
      <default-value>QUEUE_LIFE_EXPECTANCY</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>q-sleep</name>
      <type>number</type>
      <description>Time between each unsuccessfull look for a xpl data in a queue</description>
      <default-value>QUEUE_SLEEP</default-value>
    </key>
    <key>
      <order-id>5</order-id>
      <name>q-evt-timeout</name>
      <type>number</type>
      <description>Maximum wait time for getting event from queue (0 : no timeout)</description>
      <default-value>QUEUE_EVENT_TIMEOUT</default-value>
    </key>
    <key>
      <order-id>6</order-id>
      <name>q-evt-size</name>
      <type>number</type>
      <description>Size for /event queue</description>
      <default-value>QUEUE_EVENT_SIZE</default-value>
    </key>
    <key>
      <order-id>7</order-id>
      <name>q-evt-life-exp</name>
      <type>number</type>
      <description>Life expectancy for an event in event queues</description>
      <default-value>QUEUE_EVENT_LIFE_EXPECTANCY</default-value>
    </key>
  </configuration-keys>
</plugin>