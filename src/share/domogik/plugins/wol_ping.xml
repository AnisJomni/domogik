<package type="plugin">
  <id>wol_ping</id>
  <technology>computer</technology>
  <description>This plugin allows to wake up computers on a LAN and to ping them to check if they are alive</description>
  <changelog>
0.2
- adapt plugin for release 0.2.0

0.1
- plugin creation
  </changelog>
  <version>0.2a0</version>
  <documentation>http://wiki.domogik.org/plugin_wol_ping</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>ping-interval</name>
      <type>string</type>
      <description>Interval between each ping</description>
      <default-value>60</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>2</order-id>
      <name>name</name>
      <type>string</type>
      <description>Name</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>3</order-id>
      <name>ip</name>
      <type>string</type>
      <description>Ip or dns</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>4</order-id>
      <name>mac</name>
      <type>string</type>
      <description>Mac address</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <optionnal>yes</optionnal>
      <order-id>5</order-id>
      <name>wol-port</name>
      <type>string</type>
      <description>Port used for WOL</description>
      <default-value></default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/wol_ping.xml"/>
    <file path="src/share/domogik/stats/computer/sensor.basic-wol_ping.xml"/>
    <file path="src/share/domogik/url2xpl/computer/wol.xml"/>
    <file path="src/domogik/xpl/bin/wol_ping.py"/>
    <file path="src/domogik/xpl/lib/wol_ping.py"/>
  </files>
  <dependencies/>
  <device_technology>
      <id>computer</id>
      <name>Computer</name>
      <description>Computer</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>computer.control</id>
          <device_technology_id>computer</device_technology_id>
          <name>Control</name>
          <description>Control</description>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>computer.control.wol</id>
          <name>Wake on lan</name>
          <feature_type>actuator</feature_type>
          <device_type_id>computer.control</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;wol&quot;}
          </parameters>
          <value_type>trigger</value_type>
          <stat_key/>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>computer.control.ping</id>
          <name>Ping</name>
          <feature_type>sensor</feature_type>
          <device_type_id>computer.control</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>boolean</value_type>
          <stat_key>ping</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
