<package type="plugin">
  <name>xbmc_not</name>
  <technology>multimedia</technology>
  <description>Send notifications to XBMC</description>
  <detail>XBMC notifications management</detail>
  <version>0.1</version>
  <documentation>http://wiki.domogik.org/tiki-index.php?page=plugin_xbmc_not</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>address</name>
      <type>string</type>
      <description>XBMC Media center HTTP API address(ip:port)</description>
      <default-value>xbmc:8000</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>delay</name>
      <type>number</type>
      <description>Default delay for displaying a notification (seconds)</description>
      <default-value>15</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>maxdelay</name>
      <type>number</type>
      <description>Max delay between sending title and message with osd.basic xpl message (seconds)</description>
      <default-value>10</default-value>
    </key>
  </configuration-keys>
  <files/>
  <dependencies/>
  <device_technology>
      <id>multimedia</id>
      <name>Multimedia</name>
      <description>Multimedia</description>
  </device_technology>
  <device_types/>
  <device_feature_models/>
</package>
