                    <key name="type" value="temp"/>
                    <key name="type" value="setpoint"/>
                    <key name="type" value="demand"/>
                </filter>
            </listener>
            <mapping>
                <device field="device"/>
                <value field="current" new_name="battery" 
                       filter_key="type" filter_value="battery" />
