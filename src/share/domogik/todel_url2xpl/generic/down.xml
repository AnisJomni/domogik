<technology id="generic">
  <command name="down">
    <schema>shutter.basic</schema>
    <command-key>command</command-key>
    <address-key>device</address-key>
    <command-xpl-value>down</command-xpl-value>
    <parameters>
      <parameter key="command" value="goto"/>
    </parameters>
  </command>
  <listener>
    <schema>shutter.device</schema>
    <xpltype>xpl-trig</xpltype>
    <filter>
      <key name="command" value="down"/>
      <key name="device" value="@address@"/>
    </filter>
  </listener>
</technology>
