<technology id="roowifi">
  <command name="spot">
    <schema>roowifi.basic</schema>
    <command-key>command</command-key>    
    <address-key>device</address-key>    
    <command-xpl-value>spot</command-xpl-value>          
    <parameters/>
  </command>    
  <listener>
    <schema>roowifi.basic</schema>
    <xpltype>xpl-trig</xpltype>
    <filter>
      <key name="command" value="spot" />
      <key name="device" value="@address@"/>
    </filter>
  </listener>
</technology>
