<package type="plugin">
  <id>knx</id>
  <technology>knx</technology>
  <description>KNX management with Eibd</description>
  <changelog>
0.1
- plugin creation
  </changelog>
  <version>0.1a0</version>
<documentation>http://wiki.domogik.org/plugin_knx</documentation>
  <author>Basilic</author>
  <author-email>foof@fuu.bar</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>device</name>
      <type>string</type>
      <description>KNX device (IP addres)</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>file</name>
      <type>string</type>
      <description>Path of KNX configuration file</description>
      <default-value></default-value>
    </key>

 </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/knx/icon.png"/>
    <file path="src/share/domogik/plugins/knx.xml"/>
    <file path="src/share/domogik/stats/knx/knx.basic.xml"/>
    <file path="src/domogik/xpl/bin/knx.py"/>
    <file path="src/domogik/xpl/lib/knx.py"/>
    <file path="src/share/domogik/url2xpl/knx/write.xml"/>
    <file path="src/share/domogik/url2xpl/knx/read.xml"/>
    <file path="src/share/domogik/url2xpl/knx/response.xml"/>
    <file path="src/share/domogik/url2xpl/knx/on.xml"/>
    <file path="src/share/domogik/url2xpl/knx/off.xml"/>
    <file path="src/share/domogik/url2xpl/knx/up.xml"/>
    <file path="src/share/domogik/url2xpl/knx/down.xml"/>
    <file path="src/share/domogik/url2xpl/knx/preset_dim.xml"/>
    <file path="src/share/domogik/url2xpl/knx/HVACnofreeze.xml"/>
    <file path="src/share/domogik/url2xpl/knx/HVACeco.xml"/>
    <file path="src/share/domogik/url2xpl/knx/HVACstop.xml"/>
    <file path="src/share/domogik/url2xpl/knx/HVACnormal.xml"/>
  </files>
  <dependencies/>
  <udev-rules/>
  <device_technology>
      <id>knx</id>
      <name>KNX</name>
      <description>KNX with Eibd</description>
  </device_technology>

  <device_types>
      <device_type>
          <id>knx.raw</id>
          <device_technology_id>knx</device_technology_id>
          <name>Raw</name>
          <description>Raw value</description>
      </device_type>
      <device_type>
          <id>knx.switch</id>
          <device_technology_id>knx</device_technology_id>
          <name>Switch</name>
          <description>switch</description>
      </device_type>
      <device_type>
          <id>knx.dimmer</id>
          <device_technology_id>knx</device_technology_id>
          <name>Dimmer</name>
          <description>Eib1</description>
      </device_type>
      <device_type>
          <id>knx.shutter</id>
          <name>Shutter</name>
          <description>Shutter</description>
          <device_technology_id>knx</device_technology_id>
      </device_type>
      <device_type>
          <id>knx.HVACMode</id>
          <name>HVACMode</name>
          <description>HVACMode</description>
          <device_technology_id>knx</device_technology_id>
      </device_type>

      <device_type>
          <id>knx.thermometer</id>
          <device_technology_id>knx</device_technology_id>
          <name>Temperature</name>
          <description>Temperature</description>
      </device_type>

      <device_type>
          <id>knx.lux</id>
          <device_technology_id>knx</device_technology_id>
          <name>Lux</name>
          <description>Lux</description>
      </device_type>
      <device_type>
          <id>knx.humidity</id>
          <device_technology_id>knx</device_technology_id>
          <name>Humidity</name>
          <description>Humidity</description>
      </device_type>
  </device_types>

  <device_feature_models>
     <device_feature_model>
          <id>knx.humidity.humidity</id>
          <name>Humidity</name>
          <feature_type>sensor</feature_type>
          <device_type_id>knx.humidity</device_type_id>
          <parameters>
             {&quot;unit&quot;:&quot;&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>0</return_confirmation>
     </device_feature_model>
     <device_feature_model>
          <id>knx.thermometer.temperature</id>
          <name>Temperature</name>
          <feature_type>sensor</feature_type>
          <device_type_id>knx.thermometer</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;\u00B0C&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>0</return_confirmation>
     </device_feature_model>
     <device_feature_model>
          <id>knx.lux.lux</id>
          <name>Luxmeter</name>
          <feature_type>sensor</feature_type>
          <device_type_id>knx.lux</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;lux&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>0</return_confirmation>
     </device_feature_model>


     <device_feature_model>
          <id>knx.HVACMode</id>
          <name>HVACMode</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.HVACMode</device_type_id>
          <parameters>
		{&quot;command&quot;:&quot;&quot;,&quot;commandValues&quot;:[&quot;HVACstop&quot;,&quot;HVACnofreeze&quot;,&quot;HVACeco&quot;,&quot;HVACnormal&quot;]}
          </parameters>
          <value_type>list</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>knx.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.switch</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;,&quot;value0&quot;:&quot;off&quot;, &quot;value1&quot;:&quot;on&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>knx.eib1.dimmer</id>
          <name>Dimmer</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;preset_dim&quot;,&quot;valueMin&quot;:0, &quot;valueMax&quot;:100}
          </parameters>
          <value_type>range</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>knx.shutter.switch</id>
          <name>Shutter</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.shutter</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;,&quot;value0&quot;:&quot;down&quot;, &quot;value1&quot;:&quot;up&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>knx.shutter.stop</id>
          <name>Stop</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.shutter</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;stop&quot;,&quot;value0&quot;:&quot;stop&quot;, &quot;value1&quot;:&quot;stop&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>knx.raw.write</id>
          <name>Write</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.raw</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;write&quot;}
          </parameters>
          <value_type>string</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>1</return_confirmation>
     </device_feature_model>
     <device_feature_model>
          <id>knx.raw.read</id>
          <name>Read</name>
          <feature_type>sensor</feature_type>
          <device_type_id>knx.raw</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>string</value_type>
          <stat_key>data</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>

