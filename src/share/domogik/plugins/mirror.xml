<plugin>
  <name>mirror</name>
  <technology>rfid</technology>
  <description>Use Mir:ror device</description>
  <version>0.1</version>
  <documentation>http://wiki.domogik.org/tiki-index.php?page=plugins/Mirror</documentation>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>device</name>
      <type>string</type>
      <description>Mir:ror device (ex : /dev/hidraw0)</description>
      <default-value>/dev/hidraw0</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>nbmaxtry</name>
      <type>number</type>
      <description>Max number of tries to open Mir:ror device</description>
      <default-value>3</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>interval</name>
      <type>number</type>
      <description>Delay between each try to open Mir:ror device</description>
      <default-value>3</default-value>
    </key>
  </configuration-keys>
</plugin>