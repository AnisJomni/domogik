<?xml version="1.0" encoding="UTF-8"?>  
<statistic technology="ozwave">
    <schema name="sensor.basic">
        <xpltype type="*">
            <listener>
                <filter>
                    <key name="type" value="temperature"/>
                    <key name="type" value="relative humidity"/>
                    <key name="type" value="battery level"/>
                    <key name="type" value="sensor"/>
					<key name="type" value="status"/>
					<key name="type" value="power"/>
					<key name="type" value="energy"/>
					<key name="type" value="previous reading"/>
					<key name="type" value="reset"/>
					<key name="type" value="luminance"/>
					<key name="type" value="general"/>
					<key name="type" value="motion"/>
                </filter>
            </listener>
            <mapping>
                <device field="device"/>
                <value field="units"/>
                <value field="current" new_name="temperature" 
                       filter_key="type" filter_value="temperature" />
                <value field="current" new_name="humidity" 
                       filter_key="type" filter_value="relative humidity" />
                <value field="current" new_name="battery"
                       filter_key="type" filter_value="battery level" />
                <value field="current" new_name="sensor"
                       filter_key="type" filter_value="sensor" />
                <value field="current" new_name="status"
                       filter_key="type" filter_value="status" />
				<value field="current" new_name="power"
					   filter_key="type" filter_value="power" />
				<value field="current" new_name="energy"
					   filter_key="type" filter_value="energy" />
				<value field="current" new_name="previous reading"
					   filter_key="type" filter_value="previous reading" />
				<value field="current" new_name="reset"
					   filter_key="type" filter_value="reset" />
				<value field="current" new_name="luminance"
					   filter_key="type" filter_value="luminance" />
				<value field="current" new_name="general"
					   filter_key="type" filter_value="general" />
				<value field="current" new_name="motion"
					   filter_key="type" filter_value="motion" />
            </mapping>
        </xpltype>
    </schema>
</statistic>

