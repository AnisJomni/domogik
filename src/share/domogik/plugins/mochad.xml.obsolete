<package type="plugin">
  <id>mochad</id>
  <technology>x10</technology>
  <description>X10 is a CPL based protocol to control lights, appliances, etc. This plugin needs mochad to work</description>
  <changelog>
0.1
- plugin creation
  </changelog>
  <version>0.1a0</version>
  <documentation>http://wiki.domogik.org/plugin_mochad</documentation>
  <author>Julien Garet, jgaret</author>
  <author-email>julien at garet dot info</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>mochad-host</name>
      <type>string</type>
      <description>mochad host address</description>
      <default-value>127.0.0.1</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>mochad-port</name>
      <type>string</type>
      <description>mochad port address</description>
      <default-value>1099</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>cm15</name>
      <type>boolean</type>
      <description>If you use a cm15 with communication to devices via PL</description>
      <default-value>True</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>cm19</name>
      <type>boolean</type>
      <description>if you use a cm19 with communication to devices via RF</description>
      <default-value>False</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/mochad/icon.png"/>
    <file path="src/share/domogik/plugins/mochad.xml"/>
    <file path="src/share/domogik/stats/x10/x10.basic-mochad.xml"/>
    <file path="src/share/domogik/url2xpl/x10/bright.xml"/>
    <file path="src/share/domogik/url2xpl/x10/dim.xml"/>
    <file path="src/share/domogik/url2xpl/x10/on.xml"/>
    <file path="src/share/domogik/url2xpl/x10/off.xml"/>
    <file path="src/domogik/xpl/bin/mochad.py"/>
    <file path="src/domogik/xpl/lib/mochad.py"/>
  </files>
  <dependencies/>
  <udev-rules/>
  <device_technology>
      <id>x10</id>
      <name>X10</name>
      <description>X10 technology</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>x10.switch</id>
          <name>Switch</name>
          <description>Switch</description>
          <device_technology_id>x10</device_technology_id>
      </device_type>
      <device_type>
          <id>x10.dimmer</id>
          <name>Dimmer</name>
          <description>Dimmer</description>
          <device_technology_id>x10</device_technology_id>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>x10.switch.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>x10.switch</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;,&quot;value0&quot;:&quot;off&quot;, &quot;value1&quot;:&quot;on&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>x10.dimmer.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>x10.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;&quot;,&quot;value0&quot;:&quot;off&quot;, &quot;value1&quot;:&quot;on&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>x10.dimmer.reduce</id>
          <name>Reduce</name>
          <feature_type>actuator</feature_type>
          <device_type_id>x10.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;dim&quot;,&quot;valueMin&quot;:1, &quot;valueMax&quot;:22}
          </parameters>
          <value_type>number</value_type>
          <stat_key>level</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>x10.dimmer.increase</id>
          <name>Increase</name>
          <feature_type>actuator</feature_type>
          <device_type_id>x10.dimmer</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;bright&quot;,&quot;valueMin&quot;:1, &quot;valueMax&quot;:22}
          </parameters>
          <value_type>number</value_type>
          <stat_key>level</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
