<package type="plugin">
  <id>sms</id>
  <technology>communication</technology>
  <description>Send SMS with french telephony providers : Orange, SFR, Bouygues</description>
  <changelog>
0.1.0
- plugin creation
  </changelog>
  <version>0.1.0</version>
  <documentation>http://wiki.domogik.org/plugin_sms</documentation>
  <author>Gizmo - Guillaume MORLET</author>
  <author-email>contact@gizmo-network.fr</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>login</name>
      <type>string</type>
      <description>Login</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>password</name>
      <type>password</type>
      <description>Password</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>phone</name>
      <type>string</type>
      <description>Phone Number : 06XXXXXXXX, 07XXXXXXXX, 0033XXXXXXX, +33XXXXXXX</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>operator</name>
      <type>string</type>
      <description>Operator : orange, sfr, bouygues</description>
      <default-value>orange</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/sms.xml"/>
    <file path="src/share/domogik/url2xpl/communication/send_sms.xml"/>
    <file path="src/domogik/xpl/bin/sms.py"/>
    <file path="src/domogik/xpl/lib/sms_orange.py"/>
    <file path="src/domogik/xpl/lib/sms_sfr.py"/>
    <file path="src/domogik/xpl/lib/sms_bouygues.py"/>
  </files>
  <dependencies>                                                                
     <dep type="python" id="mechanize"/>
  </dependencies> 
  <device_technology>
      <id>communication</id>
      <name>communication</name>
      <description>Telephony, videophone, mails, messaging</description>
  </device_technology>
   <device_types>
     <device_type>
         <id>communication.sms</id>
         <device_technology_id>communication</device_technology_id>
         <name>Sms</name>
         <description>Short Message Service</description>
     </device_type>
   </device_types>
   <device_feature_models>
     <device_feature_model>
         <id>communication.sms.send</id>
         <name>Send</name>
         <feature_type>actuator</feature_type>
         <device_type_id>communication.sms</device_type_id>
	 <parameters>
            {&quot;command&quot;:&quot;send_sms&quot;}
          </parameters>
         <value_type>trigger</value_type>
         <stat_key/>
         <return_confirmation>0</return_confirmation>
         </device_feature_model>
     </device_feature_models>
</package>

