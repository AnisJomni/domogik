<technology id="ozwave">
  <command name="level">
    <schema>ozwave.basic</schema>
    <command-key>command</command-key>	
    <address-key>addressety</address-key>	
    <command-xpl-value>level</command-xpl-value>
    <parameters>                                                                                            
      <parameter key="level" location="1"/>                                                           
    </parameters>                                                                                           
  </command>
  <listener>
    <schema>ozwave.basic</schema>
    <xpltype>xpl-trig</xpltype>
    <filter>
      <key name="command" value="level" />
      <key name="device" value="@address@"/>
    </filter>
  </listener>
</technology>
