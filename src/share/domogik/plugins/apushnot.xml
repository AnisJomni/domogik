<package type="plugin">
  <id>apushnot</id>
  <technology>notification</technology>
  <description>Android notification system base on external service provide by notifry</description>
  <changelog>
0.1.0
- plugin creation
  </changelog>
  <version>0.1</version>
  <documentation>http://wiki.domogik.org/plugin_apushnot</documentation>
  <author>Kriss</author>
  <author-email>Kriss@domogik.org</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <dependencies>
     <dep python="cjson"/>
  </dependencies>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>1</order-id>
      <name>name</name>
      <type>string</type>
      <description>Name</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>2</order-id>
      <name>source</name>
      <type>string</type>
      <description>32 character source key</description>
      <default-value></default-value>
    </key>
    <key>
      <interface>yes</interface>
      <order-id>3</order-id>
      <name>default-title</name>
      <type>string</type>
      <description>a default title for your notification</description>
      <default-value>default title</default-value>
    </key>

  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/apushnot.xml"/>
    <file path="src/domogik/xpl/bin/apushnot.py"/>
    <file path="src/domogik/xpl/lib/apushnot.py"/>
  </files>
  <dependencies/>
  <device_technology>
      <id>notification</id>
      <name>Notification</name>
      <description>Notification to a smartphone</description>
  </device_technology>
  <device_types/>
  <device_feature_models/>
</package>

