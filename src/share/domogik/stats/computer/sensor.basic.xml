                       filter_key="type" filter_value="ping" />
            </mapping>
        </xpltype>
        <xpltype type="xpl-stat">
            <listener>
                <filter>
                    <key name="type" value="ping"/>
                </filter>
            </listener>
            <mapping>
                <device field="device"/>
                <value field="current" history_size="0" new_name="ping"
                       filter_key="type" filter_value="ping" />
            </mapping>
        </xpltype>
    </schema>
</statistic>
