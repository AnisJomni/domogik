<package type="plugin">
  <id>mirror</id>
  <technology>rfid</technology>
  <description>Mir:ror device allow to detect RFID devices</description>
  <changelog>
0.2.0
- adapt plugin for release 0.2.0

0.1.0
- plugin creation
  </changelog>
  <version>0.2a0</version>
  <documentation>http://wiki.domogik.org/plugin_mirror</documentation>
  <author>Fritz</author>
  <author-email>fritz.smh at gmail.com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>device</name>
      <type>string</type>
      <description>Mir:ror device</description>
      <default-value>/dev/mirror</default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/mirror/icon.png"/>
    <file path="src/share/domogik/plugins/mirror.xml"/>
    <file path="src/share/domogik/stats/rfid/sensor.basic-mirror.xml"/>
    <file path="src/domogik/xpl/bin/mirror.py"/>
    <file path="src/domogik/xpl/lib/mirror.py"/>
  </files>
  <dependencies>
    <dep type="python" id="pyserial (>=2.5)"/>
  </dependencies>
  <udev-rules>
    <rule model="Mir:ror" description="Mir:ror usb device" filename="mirror.rules">
KERNEL=="hidraw*", ATTRS{idVendor}=="1da8", ATTRS{idProduct}=="1301", SYMLINK+="mirror", MODE="0666"
    </rule>
  </udev-rules>
  <device_technology>
      <id>rfid</id>
      <name>RFID</name>
      <description>RFID</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>rfid.mirror_base</id>
          <device_technology_id>rfid</device_technology_id>
          <name>Mirror base</name>
          <description>Mirror base</description>
      </device_type>
      <device_type>
          <id>rfid.mirror_tag</id>
          <device_technology_id>rfid</device_technology_id>
          <name>Mirror tag</name>
          <description>Mirror tag</description>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>rfid.mirror_base.activated</id>
          <name>Activated</name>
          <feature_type>sensor</feature_type>
          <device_type_id>rfid.mirror_base</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>boolean</value_type>
          <stat_key>activated</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>rfid.mirror_tag.present</id>
          <name>Present</name>
          <feature_type>sensor</feature_type>
          <device_type_id>rfid.mirror_tag</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>boolean</value_type>
          <stat_key>present</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
