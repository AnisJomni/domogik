<package type="plugin">
  <id>mvhr</id>
  <technology>mvhr</technology>
  <description>
  Calculate statistics of a Continuous Mechanical Extract
  Ventilation with Heat Recovery (MVHR) and a Earth Cooling Tubes (ECT)
  </description>
  <changelog>
0.1
- plugin creation
</changelog>
  <version>0.1a0</version>
  <documentation>http://wiki.domogik.org/plugin_hvac_mvhr</documentation>
  <author>Sebastien GALLET</author>
  <author-email>sgallet at gmail dot com</author-email>
  <domogik-min-version>0.2.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>name</name>
      <type>string</type>
      <description>Name of the MVHR</description>
      <default-value>mvhr1</default-value>
    </key>
    <key>
      <order-id>2</order-id>
      <name>timeout</name>
      <type>integer</type>
      <description>The timeout (in minutes) of the sensors before sending an alert</description>
      <default-value>10</default-value>
    </key>
    <key>
      <order-id>3</order-id>
      <name>delay</name>
      <type>integer</type>
      <description>The delay (in minutes) between two status messages</description>
      <default-value>5</default-value>
    </key>
    <key>
      <order-id>4</order-id>
      <name>mvhr-indoor</name>
      <type>string</type>
      <description>The indoor sensor of the mvhr</description>
      <default-value>SENSOR1</default-value>
    </key>
    <key>
      <order-id>5</order-id>
      <name>mvhr-outdoor</name>
      <type>string</type>
      <description>The outdoor sensor of the mvhr</description>
      <default-value>SENSOR2</default-value>
    </key>
    <key>
      <order-id>6</order-id>
      <name>mvhr-insuffl</name>
      <type>string</type>
      <description>The insufflation sensor of the mvhr</description>
      <default-value>SENSOR3</default-value>
    </key>
    <key>
      <order-id>7</order-id>
      <name>mvhr-reject</name>
      <type>string</type>
      <description>The reject sensor of the mvhr</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>8</order-id>
      <name>mvhr-power</name>
      <type>string</type>
      <description>The electric power sensor of the mvhr</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>9</order-id>
      <name>ect</name>
      <type>boolean</type>
      <description>Sould we manage a ECT (Earth Cooling Tube)</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>10</order-id>
      <name>ect-tube</name>
      <type>string</type>
      <description>The tube sensor of the ect</description>
      <default-value></default-value>
    </key>
    <key>
      <order-id>11</order-id>
      <name>ect-outdoor</name>
      <type>string</type>
      <description>The outdoor sensor of the ect</description>
      <default-value></default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/design/plugin/mvhr/icon.png"/>
    <file path="src/share/domogik/plugins/mvhr.xml"/>
    <file path="src/domogik/xpl/bin/mvhr.py"/>
    <file path="src/domogik/xpl/lib/mvhr.py"/>
    <file path="src/share/domogik/stats/mvhr/mvhr.basic.xml"/>
  </files>
  <dependencies/>
  <udev-rules/>
  <device_technology>
      <id>mvhr</id>
      <name>Mvhr</name>
      <description>Mechanical Ventilation with Heat Recovery</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>mvhr.exchanger_efficiency</id>
          <device_technology_id>mvhr</device_technology_id>
          <name>Exchanger eff.</name>
          <description>Exchanger efficiency</description>
      </device_type>
      <device_type>
          <id>mvhr.indoor_temperature</id>
          <device_technology_id>mvhr</device_technology_id>
          <name>Indoor temp.</name>
          <description>Indoor temperature</description>
      </device_type>
      <device_type>
          <id>mvhr.outdoor_temperature</id>
          <device_technology_id>mvhr</device_technology_id>
          <name>Outdoor temp.</name>
          <description>Outdoor temperature</description>
      </device_type>
      <device_type>
          <id>mvhr.insuffl_temperature</id>
          <device_technology_id>mvhr</device_technology_id>
          <name>Insufflation temp.</name>
          <description>Insufflation temperature</description>
      </device_type>
  </device_types>
  <device_feature_models>
      <device_feature_model>
          <id>mvhr.exchanger_efficiency.efficiency</id>
          <name>Exchanger eff.</name>
          <feature_type>sensor</feature_type>
          <device_type_id>mvhr.exchanger_efficiency</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;\u0025&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>exchng-eff</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>mvhr.indoor_temperature.temperature</id>
          <name>Indoor temp.</name>
          <feature_type>sensor</feature_type>
          <device_type_id>mvhr.indoor_temperature</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;\u00B0C&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>mvhr-indoor</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>mvhr.outdoor_temperature.temperature</id>
          <name>Outdoor temp.</name>
          <feature_type>sensor</feature_type>
          <device_type_id>mvhr.outdoor_temperature</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;\u00B0C&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>mvhr-outdoor</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
      <device_feature_model>
          <id>mvhr.insuffl_temperature.temperature</id>
          <name>Insufflation temp.</name>
          <feature_type>sensor</feature_type>
          <device_type_id>mvhr.insuffl_temperature</device_type_id>
          <parameters>
              {&quot;unit&quot;:&quot;\u00B0C&quot;}
          </parameters>
          <value_type>number</value_type>
          <stat_key>mvhr-insuffl</stat_key>
          <return_confirmation>0</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>
