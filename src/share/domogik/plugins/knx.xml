<package type="plugin">
  <name>knx</name>
  <technology>knx</technology>
  <description>KNX management with Eibd</description>
  <detail>KNS is...</detail>
  <version>0.1.0</version>
<documentation>http://wiki.domogik.org/plugin_knx</documentation>
  <author>Basilic</author>
  <author-email>foof@fuu.bar</author-email>
  <domogik-min-version>0.1.0</domogik-min-version>
  <configuration-keys>
    <key>
      <order-id>0</order-id>
      <name>startup-plugin</name>
      <type>boolean</type>
      <description>Automatically start plugin at Domogik startup</description>
      <default-value>False</default-value>
    </key>
    <key>
      <order-id>1</order-id>
      <name>device</name>
      <type>string</type>
      <description>KNX device (IP addres)</description>
      <default-value></default-value>
    </key>
  </configuration-keys>
  <files>
    <file path="src/share/domogik/plugins/knx.xml"/>
    <file path="src/share/domogik/stats/knx/knx.basic.xml"/>
    <file path="src/domogik/xpl/bin/knx.py"/>
    <file path="src/domogik/xpl/lib/knx.py"/>
    <file path="src/share/domogik/url2xpl/knx/command.xml"/>
    <file path="src/share/domogik/url2xpl/knx/ask.xml"/>
    <file path="src/share/domogik/url2xpl/knx/responce.xml"/>
  </files>
  <dependencies/>
  <device_technology>
      <id>knx</id>
      <name>KNX</name>
      <description>KNX with Eibd</description>
  </device_technology>
  <device_types>
      <device_type>
          <id>knx.switch</id>
          <device_technology_id>knx</device_technology_id>
          <name>Switch</name>
          <description>Switch</description>
      </device_type>
      <device_type>
          <id>knx.raw</id>
          <device_technology_id>knx</device_technology_id>
          <name>Raw</name>
          <description>Raw value</description>
      </device_type>
  </device_types>
  <device_feature_models>
     <device_feature_model>
          <id>knx.switch.switch</id>
          <name>Switch</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.switch</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;command&quot;,&quot;value0&quot;:&quot;0&quot;, &quot;value1&quot;:&quot;1&quot;}
          </parameters>
          <value_type>binary</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
     <device_feature_model>
          <id>knx.raw.write</id>
          <name>Write</name>
          <feature_type>actuator</feature_type>
          <device_type_id>knx.raw</device_type_id>
          <parameters>
              {&quot;command&quot;:&quot;command&quot;}
          </parameters>
          <value_type>string</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
     <device_feature_model>
          <id>knx.raw.read</id>
          <name>Read</name>
          <feature_type>sensor</feature_type>
          <device_type_id>knx.raw</device_type_id>
          <parameters>
              {}
          </parameters>
          <value_type>string</value_type>
          <stat_key>command</stat_key>
          <return_confirmation>1</return_confirmation>
      </device_feature_model>
  </device_feature_models>
</package>

